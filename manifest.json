{
  "name": "Confluence Quick Search",
  "version": "1.0",
  "description": "Quickly search your team's Confluence at the press of a button",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "search.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-40.png",
      "128": "icon-40.png"
    }
  },
  "omnibox": { "keyword" : "con" },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O"
      },
      "description": "Open Confluence Quick Search",
      "global": true
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-40.png",
    "128": "icon-80.png"
  }
}
